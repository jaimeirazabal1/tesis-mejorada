extends ../layout
block content

	script(src="/javascripts/solicitud/nueva.js")
	div.container
		h2="Nueva Solicitud"
		br
		form(class="form-horizontal",method="post")
			div.form-group
				label(class="col-sm-2 control-label")="Prioridad"
				div(class="col-sm-3")
					select(name="prioridad_id",class="form-control")
						each val in prioridad
							option(value=val.id)=val.descripcion
			div.form-group
				label(class="col-sm-2 control-label")="Descripción"
				div(class="col-sm-10")
					textarea(class="form-control",name="descripcion",required,placeholder="Descripción...")="Descripción de la vaina"
			div.form-group
				label(class="col-sm-2 control-label")="Fecha"
				div(class="col-sm-10")
					div(class='col-sm-3')
						div(class="form-group")
							div(class='input-group date',id='datetimepicker1')
								input(type='text',name="fecha",class="form-control",required,placeholder="Fecha y hora...",value="23-02-2015 09:55")
								span(class="input-group-addon")
									span(class="glyphicon glyphicon-calendar")
			input(type="hidden",value="#{usuario_id}",name="usuario_id")
			input(type="hidden",value="1",name="activo")
			div.form-group
				label(class="col-sm-2 control-label")="Solicitante"
				div(class="col-sm-3")
					div(class='col-sm-3')
					input(type="text",name="solicitante",class="form-control",required,placeholder="Solicitante...")
			div.form-group
				label(class="col-sm-2 control-label")="Tlf. Solicitante"
				div(class="col-sm-3")
					div(class='col-sm-3')
					input(type="text",name="telefono_solicitante",class="form-control",required,placeholder="Tlf. Solicitante...")
			div.form-group
				label(class="col-sm-2 control-label")="Ubicación"
				div(class="col-sm-10")
					textarea(class="form-control",name="ubicacion",required,placeholder="Ubicación...")="Ubicación de la vaina"
			div.form-group
				div(class="col-sm-offset-2 col-sm-10")
					input(type="submit",value="Agregar",class="btn btn-success")
		a(href="/solicitud/")="Lista de Solicitudes"
